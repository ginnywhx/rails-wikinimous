<%= form_for(@article) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <% if @article.new_record? %>
    <%= f.submit 'Add', class: "btn-blue" %>
  <% else %>
    <%= f.submit 'Edit', class: 'btn-red' %>
  <% end %>
<% end %>
